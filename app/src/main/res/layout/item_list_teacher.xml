<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:orientation="horizontal"
              android:layout_height="wrap_content">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center_vertical|start"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_baseline_account_circle"
            android:id="@+id/imageView2"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_gravity="center_vertical|start"
            android:id="@+id/item_teacher_first_name"
            style="@style/LowLevelTitleStyle"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_gravity="center_vertical|start"
            android:id="@+id/item_teacher_middle_name"
            style="@style/LowLevelTitleStyle"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_gravity="center_vertical|start"
            android:id="@+id/item_teacher_last_name"
            style="@style/LowLevelTitleStyle"/>
</LinearLayout>